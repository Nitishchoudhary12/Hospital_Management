
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8">
  <div class="max-w-4xl mx-auto px-4">

    <div class="text-center mb-8">
      <svg class="w-32 h-32 mx-auto" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <circle cx="50" cy="50" r="45" fill="#4F46E5" opacity="0.1"/>
        <path d="M30 50h40M50 30v40" stroke="#4F46E5" stroke-width="8" stroke-linecap="round"/>
      </svg>
      <h2 class="mt-4 text-3xl font-extrabold text-gray-900 tracking-tight">
        <%= @patient.new_record? ? "Register New Patient" : "Update Patient Details" %>
      </h2>
      <p class="mt-2 text-gray-600">Enter the patient information in the form below</p>
    </div>

    <div class="bg-white rounded-2xl shadow-xl overflow-hidden transform hover:scale-[1.01] transition-all duration-200">

      <div class="h-3 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"></div>

      <%= form_with(model: [:handle_patient_detail, @patient], local: true, class: "p-8") do |f| %>
        <% if @patient.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 rounded-lg animate-bounce">
            <div class="text-red-700">
              <h2 class="text-lg font-semibold">
                <%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:
              </h2>
              <ul class="list-disc ml-5 mt-2">
                <% @patient.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-6 rounded-xl mb-8">
          <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Personal Information
          </h3>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="relative group">
              <%= f.label :patient_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_field :patient_name, class: "mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 group-hover:border-indigo-400" %>
              <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                <svg class="h-5 w-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                </svg>
              </div>
            </div>

            <div class="relative group">
              <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.telephone_field :phone_number, class: "mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 group-hover:border-indigo-400" %>
            </div>

            <div class="relative group">
              <%= f.label :age, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.number_field :age, class: "mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 group-hover:border-indigo-400" %>
            </div>

            <div class="relative group">
              <%= f.label :gender, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.select :gender, ['Male', 'Female', 'Other'], {}, class: "mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 group-hover:border-indigo-400" %>
            </div>
          </div>
        </div>

        <!-- Medical Information Section -->
        <div class="bg-gradient-to-r from-purple-50 to-pink-50 p-6 rounded-xl mb-8">
          <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            Medical Details
          </h3>

          <div class="space-y-6">
            <div class="relative group">
              <%= f.label :facing_issue, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_area :facing_issue, rows: 3, class: "mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500 transition-all duration-200 group-hover:border-purple-400" %>
            </div>

            <div class="relative group">
              <%= f.label :current_medications, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_area :current_medications, rows: 3, class: "mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500 transition-all duration-200 group-hover:border-purple-400" %>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="relative group">
                <%= f.label :consulted_doctor, class: "block text-sm font-medium text-gray-700 mb-1" %>

                <% if @doctors.present? %>
                  <%= f.select :consulted_doctor, 
                    options_for_select(@doctors.map { |name| [name] }),
                    {}, class: "mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500 transition-all duration-200 group-hover:border-purple-400" %>
                <% else %>
                  <p>No doctors available</p>
                <% end %>
              </div>

              <div class="relative group">
                <%= f.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.select :status, 
               options_for_select([['Select Status', ''], ['appointment_booked', 'Appointment Booked'], ['checking_up', 'Checking'], 
                                  ['sent_for_report', 'Sent For Report'], ['meet_with_report_to_doctor', 'Meet With Report To Doctor'], ['treatment_done', 'Treatment Done'], ['recheck_up', 'Recheck Up']]),
 
                {}, class: "mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500 transition-all duration-200 group-hover:border-purple-400" %>
                   
              </div>
            </div>
          </div>
        </div>

        <!-- Booking Information Section -->
        <div class="bg-gradient-to-r from-green-50 to-teal-50 p-6 rounded-xl mb-8">
          <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Booking Details
          </h3>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="relative group">
              <%= f.label :booking_day, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.date_field :booking_day, class: "mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 transition-all duration-200 group-hover:border-green-400" %>
            </div>

          </div>
        </div>

        <!-- Address Section -->
        <div class="bg-gradient-to-r from-yellow-50 to-orange-50 p-6 rounded-xl mb-8">
          <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Address Information
          </h3>

          <div class="relative group">
            <%= f.label :address, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :address, rows: 3, class: "mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-yellow-500 focus:border-yellow-500 transition-all duration-200 group-hover:border-yellow-400" %>
          </div>
        </div>

        <!-- Submit Button Section -->
        <div class="flex justify-end space-x-4">
          <%= link_to 'Cancel', handle_patient_detail_patients_path, 
              class: "px-6 py-3 border border-gray-300 rounded-xl shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" %>
          
          <%= f.submit class: "px-6 py-3 border border-transparent rounded-xl shadow-sm text-base font-medium text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transform hover:scale-105 transition-all duration-200" %>
        </div>
      <% end %>
    </div>

    <!-- Decorative background elements -->
    <div class="fixed top-0 right-0 -z-10 overflow-hidden opacity-10">
      <svg class="w-96 h-96 text-indigo-500" fill="currentColor" viewBox="0 0 100 100">
        <path d="M30 50h40M50 30v40" stroke-width="8" stroke-linecap="round"/>
      </svg>
    </div>
    <div class="fixed bottom-0 left-0 -z-10 overflow-hidden opacity-10">
      <svg class="w-96 h-96 text-purple-500" fill="currentColor" viewBox="0 0 100 100">
        <circle cx="50" cy="50" r="40"/>
      </svg>
    </div>
  </div>
</div>
</div>